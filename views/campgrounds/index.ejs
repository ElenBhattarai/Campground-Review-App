<% layout('/layouts/boilerplate') %>
<div id="cluster-map"></div>
    <ul>
        <h1>All Campgrounds</h1>
        <% for(let c of campgrounds){ %>
           <div class="card mb-3">
               <div class="row">
                   <div class = "col-md-4">
                       <% if(c.images.length) {%>
                       <img class = "img-fluid" alt="" src = "<%=c.images[0].url%>">
                       <% }else{ %>
                        <img class = "img-fluid" alt="" src = "https://res.cloudinary.com/dzlvln0ps/image/upload/v1638081294/YelpCamp/h9l9ht9lvl4d56imli9l.jpg">
                       <%} %>
                   </div>
                   <div class = "col-md-8">
                       <div class="card-body">
                            <h5 class="card-title"><%=c.title%></h5>
                            <p class="card-text"><%=c.description%></p>
                            <p class="card-text"><small class = "text-muted"><%=c.location%></small></p>
                            <a class="btn btn-primary" href = "/campgrounds/<%=c._id%>">View <%=c.title%></a>
                       </div>
                   </div>
               </div>
           </div>
        <% } %>
    </ul>

<script src = "/javascripts/clusterMap.js"></script>

